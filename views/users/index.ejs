<table>
    <tr>
        <th>name</th>
        <th>furigana</th>
        <th>mail address</th>
        <th></th>
    </tr>
    <% users.forEach(function(user){ %>
    <tr>
        <td><%= user.name %></td>
        <td><%= user.furigana %></td>
        <td><%= user.mailAddress %></td>
        <td>
            <form method="post" action="/users/<%= user._id %>?_method=delete">
                <button type="submit">delete</button>
            </form>
        </td>
    </tr>
    <% }) %>
</table>

